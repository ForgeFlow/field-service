<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_sale_invoice_plan_tree_fsm_order">
        <field name="name">view.sale.invoice.plan.tree.fsm.order</field>
        <field name="model">sale.invoice.plan</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="false" delete="false">
                <field name="sale_id" readonly="1"/>
                <field name="installment" readonly="1"/>
                <field name="plan_date" readonly="1"/>
                <field name="invoice_type" readonly="1"/>
                <field name="percent" readonly="1"/>
                <field name="released"/>
                <field name="to_invoice" readonly="1"/>
                <field name="invoiced" readonly="1"/>
                <field name="last" invisible="1" />
            </tree>
        </field>
    </record>
    <record id="action_sale_invoice_plan_fsm_order"
            model="ir.actions.act_window">
        <field name="name">Sales Invoice Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.invoice.plan</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_sale_invoice_plan_tree_fsm_order" />
        <field name="search_view_id"
               ref="sale_invoice_plan.view_sale_invoice_plan_filter" />
    </record>

</odoo>
